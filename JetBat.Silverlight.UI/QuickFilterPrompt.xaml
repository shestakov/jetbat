<UserControl x:Class="JetBat.Silverlight.UI.QuickFilterPrompt"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MaxWidth="150">
	<Grid x:Name="LayoutRoot"
		  Background="White"
		  Margin="1, 0, 1, 0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition x:Name="columnTextBox"
							  Width="0" />
		</Grid.ColumnDefinitions>
		<ToggleButton Name="toggleButtonSearch"
					  Click="ToggleButtonSearch_OnClick"
					  Grid.Column="0"
					  IsTabStop="False">
			<Image Source="Images/FindHS.png" />
		</ToggleButton>
		<TextBox Name="textBoxPattern"
				 Grid.Column="1"
				 MinWidth="100"
				 HorizontalAlignment="Stretch" />
	</Grid>
</UserControl>
